<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="StreetLightApp.Views.SmithSlider"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HeightRequest="64">
    <Grid>
        <BoxView
            x:Name="marginBar1"
            BackgroundColor="Aqua"
            HeightRequest="32"
            HorizontalOptions="Start"
            WidthRequest="16" />
        <BoxView
            x:Name="marginBar2"
            BackgroundColor="Aqua"
            HeightRequest="32"
            HorizontalOptions="End"
            WidthRequest="16" />
        <Border
            x:Name="fore"
            Margin="16,0,16,0"
            BackgroundColor="Red"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 8"
            StrokeThickness="0">
            <Grid>
                <Border
                    x:Name="body"
                    BackgroundColor="Grey"
                    HorizontalOptions="End"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 0"
                    StrokeThickness="0" />
                <Label
                    x:Name="lbl"
                    HorizontalOptions="Center"
                    Text="50" />
            </Grid>
        </Border>
        <Slider
            x:Name="slider"
            BackgroundColor="Transparent"
            DragCompleted="slider_DragCompleted"
            Maximum="10"
            MaximumTrackColor="Transparent"
            Minimum="0"
            MinimumTrackColor="Transparent"
            ThumbImageSource="setting_64.png"
            ValueChanged="slider_ValueChanged_1" />
    </Grid>


</ContentView>
