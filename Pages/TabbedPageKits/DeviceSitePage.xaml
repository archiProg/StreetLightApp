<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StreetLightApp.Pages.TabbedPageKits.DeviceSitePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StreetLightApp.Views"
    Title="Wang Thonglang Construction co.,ltd."
    BackgroundColor="#F2F2F2">
    <Grid BackgroundColor="White" RowDefinitions="Auto,Auto,*">
        <Border Grid.Row="0" Stroke="#F1F5F9" />
        <StackLayout Grid.Row="1">
            <StackLayout Padding="16">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                    <Border
                        BackgroundColor="#F6F9FE"
                        Stroke="#F6F9FE"
                        StrokeShape="RoundRectangle 8">
                        <Grid ColumnDefinitions="Auto, *">
                            <Image
                                x:Name="searchIcon"
                                Grid.Column="0"
                                Margin="8,0,8,0"
                                HeightRequest="16"
                                Source="search_icon.png"
                                VerticalOptions="Center"
                                WidthRequest="16" />
                            <Entry
                                x:Name="DeviceSearchTxt"
                                Grid.Column="1"
                                BackgroundColor="#F1F5F9"
                                Focused="DeviceSearchTxt_Focused"
                                Placeholder="Contact number, Group, Name, ID"
                                PlaceholderColor="#596577"
                                Unfocused="DeviceSearchTxt_Unfocused" />
                        </Grid>
                    </Border>
                    <Button
                        Grid.Column="1"
                        Padding="16,0,16,0"
                        BackgroundColor="#316BF7"
                        Clicked="OnSearchButtonClicked"
                        CornerRadius="8"
                        FontFamily="PoppinsMedium"
                        HeightRequest="42"
                        Text="Search"
                        TextColor="#FFFFFF" />
                </Grid>
                <Label Padding="0,8" Text="Contact Number" />
                <Grid>
                    <Border
                        InputTransparent="True"
                        Stroke="#F1F5F9"
                        StrokeShape="RoundRectangle 8">
                        <Grid>
                            <Image
                                Margin="0,0,16,0"
                                HeightRequest="16"
                                HorizontalOptions="End"
                                Source="pick_icon.png" />
                        </Grid>
                    </Border>
                    <Picker
                        x:Name="sitePick"
                        Title="Contact number"
                        BackgroundColor="#FFFFFF"
                        Opacity="0.5"
                        TextColor="#B8C9D9">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>All Contact number</x:String>
                                <x:String>1200</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Grid>
                <Label Padding="0,8" Text="Group" />

                <Grid>
                    <Border
                        InputTransparent="True"
                        Stroke="#F1F5F9"
                        StrokeShape="RoundRectangle 8">
                        <Grid>
                            <Image
                                Margin="0,0,16,0"
                                HeightRequest="16"
                                HorizontalOptions="End"
                                Source="pick_icon.png" />
                        </Grid>
                    </Border>
                    <Picker
                        x:Name="groupPick"
                        Title="Group"
                        Grid.Column="1"
                        BackgroundColor="#FFFFFF"
                        Opacity="0.5">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>All Group</x:String>
                                <x:String>1200</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                </Grid>
            </StackLayout>

            <Grid
                Padding="8,0"
                ColumnDefinitions="Auto,Auto,Auto, *"
                ColumnSpacing="0">
                <CheckBox
                    x:Name="SelectAllCheckBox"
                    Margin="0"
                    CheckedChanged="OnSelectAllCheckedChanged"
                    VerticalOptions="Center"
                    Color="#53A7DF" />
                <Label
                    Grid.Column="1"
                    FontFamily="PoppinsRegular"
                    FontSize="16"
                    Text="Select all"
                    VerticalOptions="Center" />



                <Button
                    x:Name="TotalSelects"
                    Grid.Column="2"
                    Padding="12,0,12,0"
                    BackgroundColor="Transparent"
                    CornerRadius="18"
                    FontFamily="PoppinsRegular"
                    FontSize="14"
                    HeightRequest="36"
                    MinimumHeightRequest="24"
                    Text="(Up to 2,123 Items)"
                    TextColor="#4875DC"
                    VerticalOptions="Center" />
                <Button
                    Grid.Column="3"
                    Padding="12,0,12,0"
                    BackgroundColor="Transparent"
                    Clicked="OnClearlChecked"
                    CornerRadius="18"
                    FontFamily="PoppinsRegular"
                    FontSize="14"
                    HeightRequest="36"
                    HorizontalOptions="End"
                    MinimumHeightRequest="24"
                    Text="Clear All"
                    TextColor="#627296"
                    VerticalOptions="Center" />
            </Grid>
            <HorizontalStackLayout>
                <Label
                    Padding="16,8,4,8"
                    FontFamily="PoppinsSemiBold"
                    FontSize="16"
                    Text="Device List" />
                <Label
                    x:Name="TotalDevices"
                    Padding="4,8,16,8"
                    Text="(2,123)" />
            </HorizontalStackLayout>
        </StackLayout>

        <ScrollView
            x:Name="DeviceScroll"
            Grid.Row="2"
            Scrolled="OnDeviceScroll">
            <StackLayout>
                <VerticalStackLayout
                    x:Name="DeviceStack"
                    Padding="10"
                    Spacing="8" />
                <ActivityIndicator
                    x:Name="LoadingIndicator"
                    Margin="16"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    IsRunning="False"
                    IsVisible="False"
                    VerticalOptions="End" />
            </StackLayout>
        </ScrollView>
        <Border
            x:Name="ControlMenu"
            Grid.Row="2"
            BackgroundColor="#FFFFFF"
            HeightRequest="178"
            IsVisible="False"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 24 24 0 0"
            VerticalOptions="End">
            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.10"
                    Radius="6"
                    Offset="0,-4" />
            </Border.Shadow>
            <StackLayout
                Padding="16"
                BackgroundColor="#FFFFFF"
                VerticalOptions="Center">
                <Grid ColumnDefinitions="*,Auto">
                    <Label
                        x:Name="LbDevicelist"
                        Grid.Column="0"
                        Text="Control  (2 Lamp)"
                        VerticalOptions="Center" />
                    <Button
                        Grid.Column="1"
                        BackgroundColor="#FFFFFF"
                        BorderColor="#17A6FF"
                        BorderWidth="1"
                        Clicked="OnManageClicked"
                        Text="Manage"
                        TextColor="#17A6FF" />
                </Grid>
                <Grid Padding="0,16,0,0" ColumnDefinitions="Auto,*,Auto">
                    <Border
                        Grid.Column="0"
                        Padding="4"
                        BackgroundColor="#F6FCFF"
                        HorizontalOptions="Center"
                        Stroke="#F6FCFF"
                        StrokeShape="RoundRectangle 12"
                        VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="4">
                            <Image Source="sun_icon.png" />
                            <Label x:Name="lbSlider" Text="50%" />
                        </HorizontalStackLayout>
                    </Border>
                    <Slider
                        x:Name="mySlider"
                        Grid.Column="1"
                        DragCompleted="mySlider_DragCompleted"
                        Maximum="100"
                        MaximumTrackColor="#CCD8E5"
                        Minimum="0"
                        MinimumTrackColor="#2A4C6D"
                        ThumbColor="#2A4C6D"
                        ValueChanged="mySlider_HandlerChanged" />
                    <Switch Grid.Column="2" />
                </Grid>
            </StackLayout>
        </Border>
    </Grid>

</ContentPage>