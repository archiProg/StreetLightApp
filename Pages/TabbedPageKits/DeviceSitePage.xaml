<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StreetLightApp.Pages.TabbedPageKits.DeviceSitePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StreetLightApp.Views"
    Title="Wang Thonglang Construction co.,ltd."
    BackgroundColor="#F2F2F2">
    <Grid BackgroundColor="White" RowDefinitions="Auto,Auto,*">
        <Border Grid.Row="0" Stroke="#F1F5F9" />
        <StackLayout Grid.Row="1">
            <StackLayout Padding="16">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                    <Border
                        BackgroundColor="#F6F9FE"
                        Stroke="#F6F9FE"
                        StrokeShape="RoundRectangle 8">
                        <Entry
                            x:Name="DeviceSearchTxt"
                            BackgroundColor="#F1F5F9"
                            Placeholder="Contact number, Group, Name, ID"
                            PlaceholderColor="#596577" />
                    </Border>
                    <Button
                        Grid.Column="1"
                        Padding="16,0,16,0"
                        BackgroundColor="#316BF7"
                        Clicked="OnSearchButtonClicked"
                        CornerRadius="8"
                        FontFamily="PoppinsMedium"
                        HeightRequest="42"
                        Text="Search"
                        TextColor="#FFFFFF" />
                </Grid>
                <Label Padding="0,8" Text="Contact Number" />
                <Border Stroke="#F1F5F9" StrokeShape="RoundRectangle 8">
                    <Picker
                        x:Name="sitePick"
                        Title="Contact number"
                        BackgroundColor="#FFFFFF"
                        TextColor="#B8C9D9">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>All Contact number</x:String>
                                <x:String>1200</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                </Border>
                <Label Padding="0,8" Text="Group" />
                <Border Stroke="#F1F5F9" StrokeShape="RoundRectangle 8">
                    <Picker
                        x:Name="groupPick"
                        Title="Group"
                        Grid.Column="1"
                        BackgroundColor="#FFFFFF">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>All Group</x:String>
                                <x:String>1200</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                </Border>
            </StackLayout>

            <Grid
                Padding="8,0"
                ColumnDefinitions="Auto,Auto,Auto, *"
                ColumnSpacing="0">
                <CheckBox
                    x:Name="SelectAllCheckBox"
                    Margin="0"
                    CheckedChanged="OnSelectAllCheckedChanged"
                    VerticalOptions="Center"
                    Color="#53A7DF" />
                <Label
                    Grid.Column="1"
                    FontFamily="PoppinsRegular"
                    FontSize="16"
                    Text="Select all"
                    VerticalOptions="Center" />



                <Button
                    x:Name="TotalSelects"
                    Grid.Column="2"
                    Padding="12,0,12,0"
                    BackgroundColor="Transparent"
                    CornerRadius="18"
                    FontFamily="PoppinsRegular"
                    FontSize="14"
                    HeightRequest="36"
                    MinimumHeightRequest="24"
                    Text="(Up to 2,123 Items)"
                    TextColor="#4875DC"
                    VerticalOptions="Center" />
                <Button
                    Grid.Column="3"
                    Padding="12,0,12,0"
                    BackgroundColor="Transparent"
                    Clicked="OnClearlChecked"
                    CornerRadius="18"
                    FontFamily="PoppinsRegular"
                    FontSize="14"
                    HeightRequest="36"
                    HorizontalOptions="End"
                    MinimumHeightRequest="24"
                    Text="Clear All"
                    TextColor="#627296"
                    VerticalOptions="Center" />
            </Grid>
            <HorizontalStackLayout>
                <Label
                    Padding="16,8,4,8"
                    FontFamily="PoppinsSemiBold"
                    FontSize="16"
                    Text="Device List" />
                <Label
                    x:Name="TotalDevices"
                    Padding="4,8,16,8"
                    Text="(2,123)" />
            </HorizontalStackLayout>
        </StackLayout>

        <ScrollView
            x:Name="DeviceScroll"
            Grid.Row="2"
            Scrolled="OnDeviceScroll">
            <StackLayout>
                <VerticalStackLayout
                    x:Name="DeviceStack"
                    Padding="10"
                    Spacing="8" />
                <ActivityIndicator
                    x:Name="LoadingIndicator"
                    Margin="16"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    IsRunning="False"
                    IsVisible="False"
                    VerticalOptions="End" />
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>